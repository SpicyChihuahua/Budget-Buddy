<link rel="stylesheet" href="assets/css/budget.css">
<script src="assets/js/budget.js"></script>

<br><br>
    <div id="chartContainer" style="height: 300px; width: 100%;">
    </div>
<div id="bodySection"> 

	<h1 class="pageHeader">BUDGET SECTION</h1>
	<p id="userText"></p>

	<h2 id="incomeLabel">Income<br>---</h1>

	<form oninput="updateIncome();" id="budgetForm">
        <p class="formText">Hourly Wage (Per Hour): <br>$<input id="wage" name="wage" type="number" step="0.01" required/></p>
		<p class="formText">Hours per Week:</p>
		<input id="weeklyhours" name="weeklyhours" type="number" required/>
		<br>
        <p class="formText">Paycheck Arrival: </p>
        <input type="radio" id="weekly" name="payArrive" value="Weekly">
        <label for="weekly">Weekly (Every Week)</label><br><br>
        <input type="radio" id="biweekly" name="payArrive" value="Bi-Weekly">
        <label for="biweekly">Bi-Weekly (Every Other Week)</label>
	
        <br><br>
	
        <p class="resultText">Monthly Income = $<output step="0.01" id="income" name="income"></output></p>
	</form>
	
	<h2 id="incomeLabel">Expenses<br>---</h1>
	<TITLE> Add/Remove Expenses in the following table </TITLE>

	<TABLE id="dataTable" border="1">
		<TR>
			<TD><INPUT type="checkbox" name="chk"/></TD>
			<TD><INPUT type="number" step="0.01" name="txt" class="expenseVal"/></TD>
			<TD>
				<SELECT name="country" class="expenseType">
					<OPTION value="groceries">Groceries</OPTION>
					<OPTION value="car">Car Payment</OPTION>
					<OPTION value="gas">Gas</OPTION>
					<OPTION value="rent">Rent/House Payment</OPTION>
					<OPTION value="subs">Subscription</OPTION>
				</SELECT>
			</TD>
		</TR>
	</TABLE>
	
	<INPUT type="button" value="Add Expense" onclick="addRow('dataTable')" class="expenseButton"/>

	<INPUT type="button" value="Delete Expense(s)" onclick="deleteRow('dataTable')" class="expenseButton"/>

</div>
